import java.util.Scanner;


public class Main{
	public static void main(String[] args) {
		Scanner sc = new Scanner(System.in);
		int n = sc.nextInt();
		long[] F;
		F = new long[n];
		
		F[0] = 1;
		F[1] = 1;
		
		for(int i = 2;i<n;i++) {
			F[i] = F[i-1]+F[i-2];
		}
		System.out.print(F[n-1]%10007);
		
	}
}
















